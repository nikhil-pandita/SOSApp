<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nikhil Pandita"
            android:id="@+id/textView1"
            android:textColor="#fe040101"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp" />
        <com.example.nikhil.sos_rebuild.CircleShape
            android:id="@+id/nikhil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kristen"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal" />
        <ImageView
            android:id="@+id/onFB1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fb"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:onClick="onFb1" />
        <ImageView
            android:id="@+id/onG1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/googleplus"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="140dp"
            android:onClick="onGPlus1" />
        <ImageView
            android:id="@+id/onL1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/linkedin"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="240dp"
            android:onClick="onLinkedin1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ranjan Kumar"
            android:id="@+id/textView2"
            android:textColor="#fe040101"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp" />
        <com.example.nikhil.sos_rebuild.CircleShape
            android:id="@+id/ranjan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kristen"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal" />
        <ImageView
            android:id="@+id/onFB2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fb"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:onClick="onFb2" />
        <ImageView
            android:id="@+id/onG2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/googleplus"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="140dp"
            android:onClick="onGPlus2" />
        <ImageView
            android:id="@+id/onL2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/linkedin"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="240dp"
            android:onClick="onLinkedin2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Under The Supervision Of"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />
        <com.example.nikhil.sos_rebuild.CircleShape
            android:id="@+id/aurbind"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kristen"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aurbind Sharma"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager Director"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TED Consulting"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp" />
    </LinearLayout>
</ScrollView>